<Page x:Class="Mobius.Views.Pages.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:Mobius.ViewModels"
      mc:Ignorable="d"
      Title="LibraryPage">

    <Page.DataContext>
        <vm:LibraryViewModel/>
    </Page.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Библиотека"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <!-- ВАЖНО: без внешнего ScrollViewer, чтобы колесо мыши работало -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Apps}"
                 SelectedItem="{Binding SelectedApp}"
                 Style="{StaticResource LibraryListBoxStyle}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Width="170"
                            Height="220"
                            Margin="8"
                            CornerRadius="14"
                            Background="#14181E"
                            BorderThickness="2">

                        <Border.BorderBrush>
                            <MultiBinding Converter="{StaticResource RunningOrSelectedBrushConverter}">
                                <Binding Path="IsRunning"/>
                                <Binding RelativeSource="{RelativeSource AncestorType=ListBoxItem}" Path="IsSelected"/>
                            </MultiBinding>
                        </Border.BorderBrush>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="120"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Margin="10"
                                    CornerRadius="10"
                                    Background="#0F1216">
                                <Image Stretch="UniformToFill"
                                       Source="{Binding IconPath}"/>
                            </Border>

                            <StackPanel Grid.Row="1" Margin="10,6,10,10">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           MaxHeight="42"/>

                                <TextBlock Text="{Binding SourceText}"
                                           FontSize="11"
                                           Foreground="#9AA4AF"
                                           Margin="0,6,0,0"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
