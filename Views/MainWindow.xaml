<Window x:Class="Mobius.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mobius"
        Width="1200" Height="780"
        Background="#0C0F13"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="74"/>
        </Grid.RowDefinitions>

        <!-- Контент -->
        <Frame Grid.Row="0" />

        <!-- Нижняя панель -->
        <Border Grid.Row="1"
                Background="#10141A"
                BorderThickness="1"
                BorderBrush="#1E2630">
            <Grid Margin="18,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Распознавание"
                               Foreground="#A9B3BF"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <!-- Статус: теперь зависит от SpeechIsRunning -->
                    <Border Width="10" Height="10" CornerRadius="5" VerticalAlignment="Center">
                        <Border.Background>
                            <Binding Path="SpeechIsRunning"
                                     Converter="{StaticResource BoolToBrushConverter}"/>
                        </Border.Background>
                    </Border>

                    <TextBlock Text="{Binding SpeechIsRunning, StringFormat={}{0}}"
                               Foreground="#6E7A88"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <ToggleButton Grid.Column="1"
                              Width="160" Height="42"
                              Content="Голос"
                              IsChecked="{Binding SpeechMasterEnabled}"
                              Background="#141A22"
                              Foreground="White"
                              BorderThickness="1"
                              BorderBrush="#243040"
                              Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
