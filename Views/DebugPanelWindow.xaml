<Window x:Class="Mobius.Views.DebugPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="360"
        Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <Border Background="{StaticResource BgSurfaceBrush}"
            CornerRadius="18"
            Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Debug"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="4,0,0,10"/>

            <Border Grid.Row="1"
                    Background="{StaticResource BgSurface2Brush}"
                    CornerRadius="14"
                    Padding="10"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="partial:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{Binding LastHeardPartial}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,10"/>

                    <TextBlock Text="final:" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{Binding LastHeardFinal}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <ListBox Grid.Row="2"
                     ItemsSource="{Binding DebugLogs}"
                     Background="{StaticResource BgSurface2Brush}"
                     BorderBrush="#00000000"
                     Foreground="{StaticResource TextPrimaryBrush}"
                     Padding="8"
                     CornerRadius="14"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </Border>
</Window>
