<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <Color x:Key="BgWindow">#12141A</Color>
    <Color x:Key="BgSurface">#171A22</Color>
    <Color x:Key="BgSurface2">#1D2030</Color>

    <!-- Purple theme -->
    <Color x:Key="PurpleBar">#3A2B66</Color>
    <Color x:Key="PurpleBar2">#2B1F52</Color>
    <Color x:Key="PurpleCard">#2B1F52</Color>
    <Color x:Key="PurpleCard2">#342865</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#A9AFC6</Color>

    <!-- States -->
    <Color x:Key="Green">#34D399</Color>
    <Color x:Key="Red">#EF4444</Color>
    <Color x:Key="Gray">#9CA3AF</Color>
    <Color x:Key="GrayDark">#6B7280</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BgWindowBrush" Color="{StaticResource BgWindow}"/>
    <SolidColorBrush x:Key="BgSurfaceBrush" Color="{StaticResource BgSurface}"/>
    <SolidColorBrush x:Key="BgSurface2Brush" Color="{StaticResource BgSurface2}"/>

    <SolidColorBrush x:Key="PurpleBarBrush" Color="{StaticResource PurpleBar}"/>
    <SolidColorBrush x:Key="PurpleBar2Brush" Color="{StaticResource PurpleBar2}"/>
    <SolidColorBrush x:Key="PurpleCardBrush" Color="{StaticResource PurpleCard}"/>
    <SolidColorBrush x:Key="PurpleCard2Brush" Color="{StaticResource PurpleCard2}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="GrayDarkBrush" Color="{StaticResource GrayDark}"/>
</ResourceDictionary>
